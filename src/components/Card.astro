---
interface Props {
	name: string;
	tag: string;
	tagClass: string;
	desc: string;
	iconClass: string;
	features: { icon: string; title?: string }[];
	category: string;
}

const { name, tag, tagClass, desc, iconClass, features, category } = Astro.props;
---

<div class="card" data-category={category}>
	<div class="card-top">
		<div class={`tool-icon ${iconClass}`}>
			<slot name="icon" />
		</div>
		<div class="card-top-content">
			<div class="tool-name">{name}</div>
			<span class={`tag ${tagClass}`}>{tag}</span>
		</div>
	</div>
	<div class="tool-desc">
		{desc}
	</div>
	<div class="card-footer">
		<div class="features">
			{features.map((feature) => (
				<i class={feature.icon} title={feature.title}></i>
			))}
		</div>
		<a href="#" class="visit-btn">访问</a>
	</div>
</div>

<style>
	.card {
		background: var(--card-bg);
		border-radius: 12px;
		padding: 24px;
		display: flex;
		flex-direction: column;
		transition: transform 0.3s, box-shadow 0.3s;
		cursor: pointer;
		border: 1px solid transparent;
		position: relative;
		overflow: hidden;
	}

	.card:hover {
		transform: translateY(-8px);
		box-shadow: 0 16px 32px rgba(0, 0, 0, 0.4);
		border-color: #3d3d3d;
	}

	.card-top {
		display: flex;
		gap: 16px;
		margin-bottom: 16px;
	}

	.card-top-content {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.tool-icon {
		width: 48px;
		height: 48px;
		border-radius: 10px;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 24px;
		font-weight: bold;
		color: #fff;
		flex-shrink: 0;
	}

	.tag {
		padding: 4px 10px;
		border-radius: 12px;
		font-size: 12px;
		font-family: 'MiSans-Medium';
		text-transform: uppercase;
		width: fit-content;
	}

	.tag-green { background: rgba(39, 245, 131, 0.15); color: var(--accent-green); }
	.tag-blue { background: rgba(39, 167, 245, 0.15); color: var(--accent-blue); }
	.tag-purple { background: rgba(162, 103, 245, 0.15); color: var(--accent-purple); }
	.tag-pink { background: rgba(245, 39, 167, 0.15); color: var(--accent-pink); }
	.tag-orange { background: rgba(245, 162, 39, 0.15); color: var(--accent-orange); }

	.tool-name {
		font-size: 18px;
		font-family: 'MiSans-Bold';
		color: var(--text-main);
		margin-bottom: 6px;
		line-height: 1.2;
	}

	.tool-desc {
		font-size: 14px;
		color: var(--text-sub);
		line-height: 1.6;
		margin-bottom: 24px;
		flex-grow: 1;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.card-footer {
		display: flex;
		align-items: center;
		justify-content: space-between;
		border-top: 1px solid #3d3d3d;
		padding-top: 16px;
	}

	.features {
		display: flex;
		gap: 12px;
		color: #666;
	}
	
	.features i {
		font-size: 16px;
		transition: color 0.2s;
	}
	
	.card:hover .features i {
		color: #999;
	}

	.visit-btn {
		background: transparent;
		color: var(--accent-green);
		border: 1px solid var(--accent-green);
		padding: 6px 16px;
		border-radius: 16px;
		font-size: 13px;
		font-family: 'MiSans-Medium';
		cursor: pointer;
		transition: all 0.2s;
		text-decoration: none;
		display: inline-block;
	}

	.visit-btn:hover {
		background: var(--accent-green);
		color: #000;
	}
</style>
