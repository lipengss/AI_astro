---
import Header from '../components/Header.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>AI Hub - Discover Top AI Tools</title>
		<link href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css" rel="stylesheet">
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	@font-face {
		font-family: 'MiSans-Regular';
		src: url('https://assets-persist.lovart.ai/agent-static-assets/MiSans-Regular.ttf');
	}
	@font-face {
		font-family: 'MiSans-Bold';
		src: url('https://assets-persist.lovart.ai/agent-static-assets/MiSans-Bold.ttf');
	}
	@font-face {
		font-family: 'MiSans-Medium';
		src: url('https://assets-persist.lovart.ai/agent-static-assets/MiSans-Medium.ttf');
	}

	:root {
		--bg-color: #161616;
		--card-bg: #2c2c2c;
		--text-main: #ffffff;
		--text-sub: #8a8a8a;
		--accent-green: #27f583;
		--accent-blue: #27a7f5;
		--accent-purple: #a267f5;
		--accent-pink: #f527a7;
		--accent-orange: #f5a227;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		background-color: var(--bg-color);
		color: var(--text-main);
		font-family: 'MiSans-Regular', sans-serif;
	}

	body {
		width: 1920px;
		overflow-x: hidden;
		margin: 0 auto;
	}
</style>
